﻿
@model Problem


   <form method="post" class="row">
            <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Link" class="form-control border-0 shadow" />
                    <label asp-for="Link" class="ms-2"></label>
                    <span asp-validation-for="Link" class="text-danger"></span>
                </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Notes" class="form-control border-0 shadow" />
            <label asp-for="Notes" class="ms-2"></label>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <div class="form-floating py-2 col-12">
            <div class="row mt-3">
                <label for="Level">Choose Level</label>
            </div>
            <div class="row mt-3">
                <select class="form-control" name="Level" id="level">
                    <option value="Easy">Easy</option>
                    <option value="Medium">Medium</option>
                    <option value="Hard">Hard</option>

                </select>
            </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Problem" asp-action="Index" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
